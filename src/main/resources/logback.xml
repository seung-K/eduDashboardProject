<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
	<property name="LOG_DIR" value="/edu-project/logs/ksh" />

	<appender name="DEBUG_FILE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>${LOG_DIR}/debuglog.log</file>
	    <append>true</append>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	        <fileNamePattern>${LOG_DIR}/debugLog-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
	        <maxFileSize>50MB</maxFileSize>
	        <maxHistory>30</maxHistory>
	    </rollingPolicy>
	    <encoder>
	        <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</Pattern>
	    </encoder>
	</appender>
	
	<appender name="ERR_FILE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
		<file>${LOG_DIR}/errlog.log</file>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_DIR}/errLog-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>50MB</maxFileSize>
			<maxHistory>90</maxHistory>
		</rollingPolicy>
	</appender>
	
	<logger name="org.springframework" level="INFO" />
	<logger name="org.springframework.web.servlet.mvc.method.annotation.RequestResponseBodyMethodProcessor" level="DEBUG">
		<appender-ref ref="DEBUG_FILE_LOG" />
    	<appender-ref ref="ERR_FILE_LOG" />
	</logger>
	<logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="WARN" />
	<logger name="org.apache.commons.beanutils" level="INFO" />
	<logger name="org.mybatis.spring" level="DEBUG" >
		<appender-ref ref="DEBUG_FILE_LOG" />
    	<appender-ref ref="ERR_FILE_LOG" />
	</logger>
    <logger name="com.eduDashboardProject" level="DEBUG">
    	<appender-ref ref="DEBUG_FILE_LOG" />
    	<appender-ref ref="ERR_FILE_LOG" />
    </logger>
    
    <!-- root는 글로벌 로거를 의미하며, 위의 logger에 해당하지 않으면 root 로거가 실행된다. -->
	<root level="DEBUG">
		<appender-ref ref="DEBUG_FILE_LOG" />
		<appender-ref ref="ERR_FILE_LOG" />
	</root>
</configuration>